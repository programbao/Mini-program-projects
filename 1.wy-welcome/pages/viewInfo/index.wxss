body {
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.box {
  height: 100vh;
  box-sizing: border-box;
}

swiper {
  height: 100%;
}

swiper swiper-item {
  height: 100%;
}

.plan {
  display: flex;
}

/* ==== 滑动1 ==== */
.swiper1 {
  position: relative;
}
.swiper1 .bgkImg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.swiper1 .shelterView {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0,.7);
  overflow: hidden;
}
.swiper1 .experience {
  margin-top: 5vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 40rpx;
  letter-spacing: 5rpx;
  color: #fff;
}
.swiper1 .experience > view {
  opacity: 0;
  margin-top: 3vh;
  transition: all .2s;
}
.swiper1 text {
  display: inline-block;
  /* padding: 0 4rpx; */
}
.swiper1 .experience > view > text:last-child {
  color:  #0880CE;
}


/* ========滑动2======== */
.swiper2 {
  position: relative;
}
.swiper-info {
  position: relative;
  top: -20vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  font-size: 50rpx;
  z-index: 3;
  transition: all .3s;
  color: #fff;
}
.swiper-info > view{
  position: absolute;
  /* transition: all .3s; */
}
.numCode {
  color: #0880CE;
  font-size: 55rpx;
  font-weight: 700;
}
.swiper-img {
  width: 200rpx;
  height: 200rpx;

  border: 5px solid #fff;
}
.swiper-img image {
  width: 100%;
  height: 100%;
  border-radius: 10px;
}
.swiper2 .img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: #282923;
  z-index: 0;
}
.swiper2 image {
  width: 120%;
  height: 120%;
}
 
/* 遮挡层 */
.swiper2 .shelter {
  position: absolute;
  z-index: 2;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
 background-image: linear-gradient(to bottom left, rgba(255,255,255,.2) ,transparent);
 }

