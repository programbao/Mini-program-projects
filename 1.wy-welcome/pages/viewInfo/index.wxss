}


/* ========滑动4====== */
.swiper4 {
  opacity: 0;
  transition: all 2s;
}
.swiperStyle {
  opacity: 1;
}
.swiper4>view {
  margin: 30rpx 40rpx 0;
}
.swiper4 .note {
  font-size: 42rpx;
}
/* 序列 */

/* 安排的事项 */
.plan {
  font-size: 32rpx;
}
.plan .title {
  font-weight: 700;
}
/* 安排 */
.plan .arrange {
  flex: 10;
}
/* 主题 */
.plan .txt1 {
  font-weight: 500;
  color: #0880CE;
}
/* 说明 */
.plan .txt2 {
  font-size: 25rpx;
  color: #7D7D7D;
}
.welcome {
  font-size: 45rpx;
}
/* logo */
.logo {
  position: absolute;
  bottom: 15vh;
  width: 200rpx;
  height: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  margin: 0 !important;
  z-index: -1;
}
.logo image {
  width: 100%;
  height: 100%;
}



/*用来包裹所有的小圆点  */

.dots {
  width: 160rpx;
  height: 36rpx;
  display: flex;
  position: absolute;
  left: 50%;
  bottom: 5vh;
  transform: translateX(-50%);
  justify-content: space-around;
  align-items: center;
}

/*未选中时的小圆点样式 */

.dot {
  width: 20rpx;
  height: 20rpx;
  border-radius:50%;
  border: 1rpx solid #0880CE;
}

/*选中以后的小圆点样式  */

.active {
  background-color: #0880CE;
}
